using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace CalculatorHW
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }
        private void Form1_Load(object sender, EventArgs e)
        {
            lblSign.Text = "";
            for (int i = 0; i < this.Controls.Count; i++)
            {
                var control = this.Controls[i];
                if (control is Button && control.Text.Contains("button"))
                {
                    control.Text = control.Text[control.Text.Length - 1].ToString();
                }
            }
        }
        private void button7_Click(object sender, EventArgs e)
        {
            if (lblSign.Text == "")
            {
                tbNumberOne.Text += ((Button)sender).Text;
            }
            else {
                tbNumberTwo.Text += ((Button)sender).Text;
                    }
        }

        private void btnSign_Click(object sender, EventArgs e)
        {
            lblSign.Text = ((Button)sender).Text;
        }

        private void btnEqual_Click(object sender, EventArgs e)
        {
            double result = 0;
            int numberOne;
            int numberTwo;

            try
            {
                numberOne = int.Parse(tbNumberOne.Text);
                numberTwo = int.Parse(tbNumberTwo.Text);
            }
            catch (FormatException formatException)
            {
                tbNumberOne.Text = "Error";
                tbNumberTwo.Text = "Error";
                tbResult.Text = "Error";
                MessageBox.Show(formatException.Message);
                return;
            }
            catch(OverflowException overflowException)
            {
                tbNumberOne.Text = "";
                tbNumberTwo.Text = "";
                tbResult.Text = "";
                MessageBox.Show(overflowException.Message);
                return;
            }

            switch(lblSign.Text)
            {
                case "+":
                    result = numberOne + numberTwo;
                    break;
                case "-":
                    result = numberOne - numberTwo;
                    break;
                case "*":
                    result = numberOne * numberTwo;
                    break;
                case "/":
                    try
                    {
                        result = numberOne / numberTwo;
                    }
                    catch (Exception ex)
                    {
                        MessageBox.Show(ex.Message);
                    }
                    break;
                default:
                    MessageBox.Show("Please, select operation!");
                    break;
            }
            tbResult.Text = result.ToString();
        }

        private void btnClear_Click_Click(object sender, EventArgs e)
        {
            lblSign.Text = "";
            tbNumberOne.Text = "";
            tbNumberTwo.Text = "";
            tbResult.Text = "";
        }
    }
}
